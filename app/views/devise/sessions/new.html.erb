
<div class="container mt-12 flex justify-between items-center mx-auto px-8 md:px-14 lg:px-36 w-full">
  <section class="w-full">
    <h2 class="secondary-title">Log in</h2>

    <div class="w-full gap-8 lg:gap-32 mt-10">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => 'space-y-6'}) do |f| %>
        <div>
          <%= f.label :email, class: "text-white block mb-6 text-xl font-bold" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full border border-input-border bg-input px-4 py-4" %>
        </div>

        <div>
          <%= f.label :password, class: "text-white block mb-6 text-xl font-bold" %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "w-full border border-input-border bg-input px-4 py-4" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div>
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <%= f.submit "Log in", class: "px-6 py-2 bg-theme text-white font-bold" %>
      <% end %>

      <%= render "devise/shared/links" %>
      </div>
  </section>
</div>


