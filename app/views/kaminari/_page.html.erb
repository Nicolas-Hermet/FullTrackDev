<%# Link showing page number
  - available local variables
    page:          a page object for "this" page
    url:           url to this page
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
-%>
<% if page.current? %>
  <span class="page current inline-flex h-10 min-w-10 justify-center items-center bg-gray-800 px-4 rounded-full text-gray-500">
    <%= link_to_unless page.current?, page, url, {remote: remote, rel: page.rel} %>
  </span>
<% else %>
  <span class="page">
    <%= link_to_unless page.current?, page, url, {remote: remote, rel: page.rel, class: "inline-flex h-10 min-w-10 justify-center items-center bg-gray-800 px-2 rounded-full text-gray-300 hover:bg-purple-600 transition-colors duration-150 ease-in-out" } %>
  </span>
<% end %>

